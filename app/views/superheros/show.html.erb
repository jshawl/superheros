<h2><%= @superhero.name %></h2>

<dl>
  <dt>Has a cape?</dt>
  <dd><%= @superhero.cape ? "Yes" : "No" %></dd>
  <dt>Super Power:</dt>
  <dd><%= @superhero.super_power %></dd>
  <dt>Image</dt>
  <dd><%= image_tag( @superhero.image, alt: "Image of #{@superhero.name}" ) %></dd>
</dl>

<%= link_to 'Edit', edit_superhero_path( @superhero ), class: "cta" %>
<%= link_to 'Delete', superhero_path( @superhero ), method: :delete, class: "cta" %>